{{- define "feedbeg" -}}
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
<channel>
    <title>Invido</title>
    <description>Invido un sito che tratta giochi di carte tradizionali italiani</description>
    <link>https://invido.it</link>
    <copyright>All rights reserved</copyright>
   
    {{- range .ListPost}}
    <item>
        <title>{{.Title}}</title>
        <description>{{.Abstract}}</description>
        <link>https://invido.it{{.Uri}}</link>
        <pubDate>{{.DateTimeRfC822}}</pubDate>
    </item>
    {{- end}}
    {{- range .ListPage}}
    <item>
        <title>{{.Title}}</title>
        <link>https://invido.it{{.Uri}}</link>
        <pubDate>{{.DateTimeRfC822}}</pubDate>
    </item>
    {{- end}}
</channel>
</rss>
{{- end -}}